<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/kontenClik"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/tag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="#"
        android:textColor="@color/yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />
    <TextView
        android:id="@+id/tvTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="belajar ngoding"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/tag"
        app:layout_constraintStart_toEndOf="@+id/tag"
        app:layout_constraintTop_toTopOf="@+id/tag"/>

    <TextView
        android:id="@+id/jumlahTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2317482"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/text_gray"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@+id/tvTag"
        app:layout_constraintBottom_toBottomOf="@+id/tvTag"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>