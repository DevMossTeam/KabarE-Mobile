<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="4dp"
    app:shapeAppearanceOverlay="@style/TopRoundedCardView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Judul di atas -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tautan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Container untuk semua link -->
            <LinearLayout
                android:id="@+id/links_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Link 1 -->
                <LinearLayout
                    android:id="@+id/link1_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:minHeight="48dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/link"
                        android:layout_marginEnd="8dp"
                        app:tint="@android:color/black" />

                    <TextView
                        android:id="@+id/link1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Link 1"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Link 2 -->
                <LinearLayout
                    android:id="@+id/link2_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:minHeight="48dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/link"
                        android:layout_marginEnd="8dp"
                        app:tint="@android:color/black" />

                    <TextView
                        android:id="@+id/link2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Link 2"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Link 3 -->
                <LinearLayout
                    android:id="@+id/link3_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:minHeight="48dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/link"
                        android:layout_marginEnd="8dp"
                        app:tint="@android:color/black" />

                    <TextView
                        android:id="@+id/link3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Link 3"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Link 4 -->
                <LinearLayout
                    android:id="@+id/link4_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="12dp"
                    android:minHeight="48dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/link"
                        android:layout_marginEnd="8dp"
                        app:tint="@android:color/black" />

                    <TextView
                        android:id="@+id/link4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Link 4"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>
