<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/background_white"
        tools:context=".ui.home.terbaru.DetailArtikelFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_white"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:id="@+id/frameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/TopImage"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:background="#66000000">
                            <ImageView
                                android:id="@+id/ivBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:src="@drawable/ic_back"
                                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                            <TextView
                                android:id="@+id/tvKategori"
                                android:layout_marginStart="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:text="Kategori"
                                android:textColor="@color/white"
                                android:textSize="20sp"/>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/format_font"
                                android:elevation="0dp"
                                app:strokeWidth="0dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="200dp"
                                android:backgroundTint="#66000000"
                                app:cardCornerRadius="50dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

                                <TextView
                                    android:id="@+id/setFont"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:text="Aa"
                                    android:textColor="@color/white"
                                    android:textSize="15dp"
                                    tools:ignore="ContentDescription,TextSizeCheck,TouchTargetSizeCheck" />

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>


                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="Geger 7 Mayat ditemukan di Kali Bekasi "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
                        tools:ignore="TextSizeCheck" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="@+id/tvTitle"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

                        <TextView
                            android:id="@+id/tvTimestamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kamis, 19 Sep 2024 09:48"
                            android:textColor="@color/grey"
                            android:textSize="10sp"
                            tools:ignore="TextSizeCheck" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:background="@color/text_gray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Author : "
                            android:textColor="@color/grey"
                            android:textSize="10sp"
                            tools:ignore="TextSizeCheck"/>
                        <TextView
                            android:id="@+id/tvAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xio yan"
                            android:textColor="@color/grey"
                            android:textSize="10sp"
                            tools:ignore="TextSizeCheck"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/line"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>


                    <WebView
                        android:id="@+id/webViewKonten"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/background_cardview"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/line1" />

                    <LinearLayout
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="200dp"
                        android:background="@drawable/outline_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/webViewKonten"
                        tools:ignore="TouchTargetSizeCheck">

                        <ImageView
                            android:id="@+id/suka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_like"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/tvLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="12"
                            android:textColor="@color/blue" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/disike"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/outline_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        app:layout_constraintStart_toEndOf="@+id/like"
                        app:layout_constraintTop_toTopOf="@+id/like"
                        tools:ignore="TouchTargetSizeCheck">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_dislike"
                            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/tvDisike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="12"
                            android:textColor="@color/blue" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/outline_background"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toEndOf="@+id/disike"
                        app:layout_constraintTop_toTopOf="@+id/disike">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:padding="5dp"
                            android:src="@drawable/ic_share"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Tag:"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="@+id/like"
                        app:layout_constraintTop_toBottomOf="@+id/like" />

                    <GridLayout
                        android:id="@+id/labelContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:columnCount="3"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView4"
                        app:layout_constraintTop_toBottomOf="@+id/textView4">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginEnd="10dp"
                            android:backgroundTint="@color/background_white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/blue"
                            app:strokeWidth="2dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Prestasi"
                                android:textColor="@color/blue"
                                android:textStyle="bold" />
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Tambahkan lebih banyak CardView di sini, sesuaikan dengan grid -->

                    </GridLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Tombol Kirim -->

    <ImageButton
        android:id="@+id/btnKomentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_komentar"
        tools:ignore="SpeakableTextPresentCheck" />

    </FrameLayout>
