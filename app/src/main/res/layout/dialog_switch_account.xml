<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:padding="16dp"
    android:layout_marginTop="24dp"> <!-- Margin atas sebesar 24dp -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Tulisan "Switch Account" di bagian atas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Akun"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="17dp" /> <!-- Margin atas -->

        <!-- Container untuk akun-akun -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Baris akun 1 -->
            <LinearLayout
                android:id="@+id/account1_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <!-- Foto profil akun 1 -->
                <ImageView
                    android:id="@+id/account1_profile_picture"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_akun"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp"
                    app:circleCrop="true" /> <!-- Circle Crop untuk gambar bulat -->

                <!-- Nama lengkap dan status akun 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/account1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Lengkap"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/account1_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Penulis"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </LinearLayout>

            <!-- Baris akun 2 -->
            <LinearLayout
                android:id="@+id/account2_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <!-- Foto profil akun 2 -->
                <ImageView
                    android:id="@+id/account2_profile_picture"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_akun"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp"
                    app:circleCrop="true" />

                <!-- Nama lengkap dan status akun 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/account2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Lengkap 2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/account2_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editor"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </LinearLayout>

            <!-- Baris akun 3 -->
            <LinearLayout
                android:id="@+id/account3_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <!-- Foto profil akun 3 -->
                <ImageView
                    android:id="@+id/account3_profile_picture"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_akun"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp"
                    app:circleCrop="true" />

                <!-- Nama lengkap dan status akun 3 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/account3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Lengkap 3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/account3_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pembaca"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Tombol Tambah Akun dengan icon tambah -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_add_account"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/add"
                android:layout_marginEnd="8dp"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/text_add_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Akun"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>