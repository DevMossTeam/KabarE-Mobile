<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:scrollbars="none" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"> <!-- Change to wrap_content -->

        <FrameLayout
            android:id="@+id/fotoprofil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_akun"
                android:contentDescription="Foto Profil"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />

            <androidx.cardview.widget.CardView
                android:id="@+id/img_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                app:cardCornerRadius="20dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@android:color/holo_blue_dark">

                <ImageView
                    android:id="@+id/img_camera_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="Edit Profile Picture"
                    android:scaleType="center"
                    android:layout_gravity="center"
                    android:src="@drawable/camera" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>

    <!-- Nama Lengkap -->
    <LinearLayout
        android:id="@+id/ll_nama_lengkap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/fotoprofil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Keterangan Nama Lengkap -->
        <TextView
            android:id="@+id/tv_keterangan_nama_lengkap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Layout Tampilan Nama Lengkap -->
        <LinearLayout
            android:id="@+id/ll_nama_lengkap_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_nama_lengkap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="John Doe"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Icon Edit Nama Lengkap -->
            <ImageView
                android:id="@+id/img_edit_nama_lengkap"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit"
                app:tint="#1176FA"
                android:contentDescription="Edit Nama Lengkap"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Layout Edit Nama Lengkap -->
        <LinearLayout
            android:id="@+id/ll_nama_lengkap_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <!-- EditText dan Batas Karakter di satu baris -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_nama_lengkap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Masukkan nama lengkap"
                    android:inputType="textPersonName"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_batas_karakter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/25"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Garis di bawah EditText yang lebih tebal -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="#1176FA" />

            <!-- Tombol Batal dan Simpan di sebelah kanan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_batal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:text="Batal"
                    android:textColor="#1176FA"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_simpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="Simpan"
                    android:textColor="#1176FA"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Informasi Tambahan -->
        <TextView
            android:id="@+id/tv_info_nama_lengkap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi ini harus akurat"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/ll_nama_lengkap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Username -->
    <LinearLayout
        android:id="@+id/ll_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/ll_nama_lengkap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Keterangan Username -->
        <TextView
            android:id="@+id/tv_keterangan_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Layout Tampilan Username -->
        <LinearLayout
            android:id="@+id/ll_username_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="johndoe123"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Icon Edit Username -->
            <ImageView
                android:id="@+id/img_edit_username"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit"
                app:tint="#1176FA"
                android:contentDescription="Edit Username"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Layout Edit Username -->
        <LinearLayout
            android:id="@+id/ll_username_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <!-- EditText dan Batas Karakter di satu baris -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Masukkan username"
                    android:inputType="textPersonName"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_batas_karakter_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/25"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Garis di bawah EditText yang lebih tebal -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="#1176FA" />

            <!-- Tombol Batal dan Simpan di sebelah kanan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_batal_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:text="Batal"
                    android:textColor="#1176FA"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_simpan_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="Simpan"
                    android:textColor="#1176FA"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Informasi Tambahan -->
        <TextView
            android:id="@+id/tv_info_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih username yang unik"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/ll_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status -->
    <LinearLayout
        android:id="@+id/ll_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/ll_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Keterangan Status -->
        <TextView
            android:id="@+id/tv_keterangan_posisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posisi"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Status Sesungguhnya -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <!-- Ikon Peringatan -->
            <ImageView
                android:id="@+id/img_warning"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/warning"
                android:contentDescription="Peringatan"
                android:layout_marginEnd="8dp"
                android:visibility="gone" /> <!-- Set default visibility to 'gone' -->

            <TextView
                android:id="@+id/tv_posisi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jurnalis/Penulis"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Icon Edit Status -->
            <ImageView
                android:id="@+id/img_edit_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Posisi"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Informasi Tambahan -->
        <TextView
            android:id="@+id/tv_info_posisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi ini tidak dapat diubah oleh Anda."
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp" />
    </LinearLayout>


    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/ll_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Info -->
    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/ll_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Keterangan Info -->
        <TextView
            android:id="@+id/tv_keterangan_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info lainnya"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Layout Tampilan Info -->
        <LinearLayout
            android:id="@+id/ll_info_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mahasiswa Jurusan Teknologi Informasi"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Icon Edit Info -->
            <ImageView
                android:id="@+id/img_edit_identitas_saya"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit"
                app:tint="#1176FA"
                android:contentDescription="Edit Identitas Saya"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Layout Edit Info -->
        <LinearLayout
            android:id="@+id/ll_info_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <!-- EditText dan Batas Karakter di satu baris -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Masukkan informasi"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_batas_karakter_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/50"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Garis di bawah EditText yang lebih tebal -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="#1176FA" />

            <!-- Tombol Batal dan Simpan di sebelah kanan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_batal_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:text="Batal"
                    android:textColor="#1176FA"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_simpan_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="Simpan"
                    android:textColor="#1176FA"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Informasi Tambahan -->
        <TextView
            android:id="@+id/tv_info_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama ini akan terlihat pembaca dan tertera sebagai editor"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/ll_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bio Anda -->
    <LinearLayout
        android:id="@+id/ll_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/ll_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Keterangan Bio Anda -->
        <TextView
            android:id="@+id/tv_keterangan_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio Anda"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Layout Tampilan Bio -->
        <LinearLayout
            android:id="@+id/ll_bio_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_bio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Saya adalah seorang developer"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Icon Edit Bio -->
            <ImageView
                android:id="@+id/img_edit_bio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit"
                app:tint="#1176FA"
                android:contentDescription="Edit Bio Anda"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Layout Edit Bio -->
        <LinearLayout
            android:id="@+id/ll_bio_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <!-- EditText dan Batas Karakter di satu baris -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_bio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Masukkan bio Anda"
                    android:inputType="text"
                    android:maxLength="160"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_batas_karakter_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/160"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Garis di bawah EditText yang lebih tebal -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="#1176FA" />

            <!-- Tombol Batal dan Simpan di sebelah kanan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_batal_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:text="Batal"
                    android:textColor="#1176FA"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_simpan_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="Simpan"
                    android:textColor="#1176FA"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Informasi Tambahan -->
        <TextView
            android:id="@+id/tv_info_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahkan informasi tentang diri Anda"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp" />
    </LinearLayout>
    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/ll_bio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/ll_social_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/ll_bio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Keterangan Social Media -->
            <TextView
                android:id="@+id/tv_keterangan_social_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Media"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Social Media Display Layout -->
            <LinearLayout
                android:id="@+id/ll_social_media_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">
            </LinearLayout>

            <!-- Layout for Adding Social Media Link (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/ll_add_social_media1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- TextView for displaying the saved link -->
                <TextView
                    android:id="@+id/tv_social_media1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
