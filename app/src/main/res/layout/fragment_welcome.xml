<!-- res/layout/fragment_welcome.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#4A99FF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Logo (Tetap Tidak Berubah) -->
    <ImageView
        android:id="@+id/logo_kabare"
        android:layout_width="232dp"
        android:layout_height="106dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/kabare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ViewPager2 untuk Fragment Konten yang Berpindah -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/logo_kabare"
        app:layout_constraintBottom_toTopOf="@id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Next Button (Tetap Tidak Berubah) -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Selanjutnya"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="88dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
