<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Text Views -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tv_profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Saya"
                android:textColor="#007BFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Chiquita Clairina Kyrevi"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_user_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Jurnalis / Penulis"
                android:textColor="#A9A9A9"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Profile Picture Frame -->
        <FrameLayout
            android:id="@+id/fotoprofil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:clipChildren="true">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_akun"
                android:contentDescription="Foto Profil"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircularShape"
                android:clickable="true"
                android:focusable="true" />

            <androidx.cardview.widget.CardView
                android:id="@+id/img_switch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@android:color/holo_blue_dark"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/resource_switch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Edit Profile Picture"
                    android:scaleType="center"
                    android:src="@drawable/resource_switch"
                    app:tint="@android:color/white" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </LinearLayout>

    <!-- "Pengaturan Akun" Text View -->
    <TextView
        android:id="@+id/tv_account_settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengaturan Akun"
        android:textColor="#555555"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp" />

    <!-- CardView Pengaturan Akun -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ll_account_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_account_settings_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <!-- Section for "Umum" -->
            <LinearLayout
                android:id="@+id/tvUmum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Umum"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil general anda"
                    android:textColor="#A9A9A9"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <!-- Section for "Notifikasi" -->
            <LinearLayout
                android:id="@+id/tvNotifikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifikasi"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atur notifikasi aplikasi"
                    android:textColor="#A9A9A9"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <!-- Section for "Keamanan" -->
            <LinearLayout
                android:id="@+id/tvKeamanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keamanan"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password akun anda"
                    android:textColor="#A9A9A9"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- "Pusat Informasi" Text View -->
    <TextView
        android:id="@+id/tv_info_center_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pusat Informasi"
        android:textColor="#555555"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/ll_account_settings"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp" />

    <!-- CardView Pusat Informasi -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ll_info_center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_info_center_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <!-- Section for "Bantuan" -->
            <LinearLayout
                android:id="@+id/tvBantuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bantuan"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pusat bantuan aplikasi"
                    android:textColor="#A9A9A9"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <!-- Section for "Tentang" -->
            <LinearLayout
                android:id="@+id/tvTentang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tentang"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tentang aplikasi ini"
                    android:textColor="#A9A9A9"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tombol Keluar -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
