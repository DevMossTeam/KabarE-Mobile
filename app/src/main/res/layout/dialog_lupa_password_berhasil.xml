<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    android:layout_gravity="center"
    app:cardElevation="4dp"
    app:shapeAppearanceOverlay="@style/TopRoundedCardView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:gravity="center">

            <!-- Icon at the top -->
            <ImageView
                android:id="@+id/lp_success_image"
                android:layout_width="102dp"
                android:layout_height="103dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/check"   />

            <!-- Title TextView -->
            <TextView
                android:id="@+id/tv_success_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password Berhasil di Perbarui"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- LinearLayout for message and Sign In -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <!-- Message TextView -->
                <TextView
                    android:id="@+id/tv_success_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Silahkan kembali ke halaman utama untuk "
                    android:textColor="@android:color/darker_gray" />

                <!-- Sign In TextView with blue color -->
                <TextView
                    android:id="@+id/tv_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>
