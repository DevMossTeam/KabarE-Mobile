<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".ui.auth.ResetPasswordFragment">

    <!-- Kabare Logo -->
    <ImageView
        android:id="@+id/iv_kabare_logo"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/kabare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#5B99E9" />

    <!-- Image below the logo -->
    <ImageView
        android:id="@+id/iv_lp_vec1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lp_vec1"
        app:layout_constraintTop_toBottomOf="@id/iv_kabare_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/tv_reset_password_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lupa password? Jangan khawatir, atur ulang password-mu dengan mudah di sini"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/iv_lp_vec1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- New Password TextInput -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_password_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password Baru"
        app:boxStrokeColor="#529BFB"
        app:boxStrokeWidth="1dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_reset_password_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="32dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:backgroundTint="@android:color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Confirm New Password TextInput -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/confirm_password_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ulangi Password"
        app:boxStrokeColor="#529BFB"
        app:boxStrokeWidth="1dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/new_password_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:backgroundTint="@android:color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_save_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="#1176FA"
        android:text="Simpan"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/confirm_password_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>