<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:backgroundTint="@color/background_white"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:shapeAppearanceOverlay="@style/TopRoundedCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_komentar"
            android:layout_width="0dp"
            android:layout_height="380dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="@+id/jumlah_komentar"
            app:layout_constraintStart_toStartOf="@+id/jumlah_komentar"
            app:layout_constraintTop_toBottomOf="@+id/jumlah_komentar">

            <include layout="@layout/shimmer_komentar" />
        </com.facebook.shimmer.ShimmerFrameLayout>

        <LinearLayout
            android:id="@+id/jumlah_komentar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jumlah_komen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8473287"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Komentar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>

        </LinearLayout>


        <!-- Title TextView -->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvKomentar"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="380dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="@+id/jumlah_komentar"
            app:layout_constraintStart_toStartOf="@+id/jumlah_komentar"
            app:layout_constraintTop_toBottomOf="@+id/jumlah_komentar"
            tools:listitem="@layout/item_dialog_komentar_artikel"/>

        <LinearLayout
            android:id="@+id/vector_komentar"
            android:layout_width="0dp"
            android:layout_height="360dp"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="@+id/jumlah_komentar"
            app:layout_constraintStart_toStartOf="@+id/jumlah_komentar"
            app:layout_constraintTop_toBottomOf="@+id/jumlah_komentar">

            <ImageView
                android:id="@+id/iv_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:src="@drawable/vec_k1" />

            <!-- No Comments TextView -->
            <TextView
                android:id="@+id/tv_no_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Belum ada komentar nih!"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vector_komentar"
        app:layout_constraintStart_toStartOf="@+id/vector_komentar">

        <!-- EditText dengan Sudut Melengkung -->
            <EditText
                android:id="@+id/et_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_blue_background"
                android:hint="Tulis komentarmu disini"
                android:inputType="textMultiLine"
                android:paddingStart="37dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />

        <!-- Tombol Kirim -->
            <ImageButton
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/send"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/line"
        android:layout_marginTop="5dp"
        android:layout_width="70dp"
        android:layout_height="5dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="50dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/text_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</com.google.android.material.card.MaterialCardView>

