<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:padding="16dp"
    android:layout_marginTop="24dp"> <!-- Margin atas sebesar 24dp -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Tulisan "Konfirmasi Keluar" di bagian atas dengan margin atas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Keluar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="17dp" /> <!-- Tambahan margin atas -->

        <!-- Pertanyaan "Anda ingin keluar?" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anda ingin keluar?"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp" />

        <!-- Tombol Ya dengan margin samping -->
        <Button
            android:id="@+id/button_ya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ya"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAllCaps="false" />

        <!-- Tombol Tidak (hanya berupa TextView) dengan margin bawah -->
        <TextView
            android:id="@+id/button_tidak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="17dp" /> <!-- Tambahan margin bawah -->

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
