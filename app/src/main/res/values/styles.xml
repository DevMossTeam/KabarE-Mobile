<resources>
    <!-- ShapeAppearanceOverlay for top rounded corners -->
    <style name="TopRoundedCardView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CircularShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.BottomNavigation" parent="TextAppearance.AppCompat.Body1">
        <item name="android:paddingStart">20dp</item> <!-- Atur jarak di sebelah kiri teks -->
        <item name="android:paddingEnd">20dp</item>   <!-- Atur jarak di sebelah kanan teks -->
        <item name="android:textSize">8sp</item>    <!-- Ukuran teks -->
    </style>

</resources>
